<div class="brick" id="create">

	<h1>Create new task:</h1>

	<%= form_for @task do |f| %>
		<%= f.label "Title", :class => "title" %> <br>
		<%= f.text_field :title, :size => 20, :class => "input" %> <br>
		<%= f.label "Content", :class => "title" %> <br>
		<%= f.text_field :body, :size => 20, :class => "input" %> <br>
		<%= f.submit "Create", :id => "button"  %>
	<% end %>

</div>
